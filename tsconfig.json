{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2018",   
    "lib": ["es2018", "dom"],
    "types": ["cypress", "codeceptjs"],                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false                                 
  },
  "include": ["**/*.ts"]
}
